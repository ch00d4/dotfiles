root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
indent_size = 2
indent_style = space

[*.{js,jsx,json}]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
indent_style = space

[Makefile]
indent_style = tab
tab_width = 4
